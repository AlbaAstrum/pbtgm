package com.mycompany.bab6no2;

/**
 *
 * @author USER
 */

import java.util.Scanner;

public class Bab6no2 {

    public static void main(String[] args) {
        Scanner userinput = new Scanner (System.in);
        
        //pertanyaan
        
       System.out.println("Masukan NIM anda");
        int nim = userinput.nextInt();
       System.out.println("Masukan nilai anda");
        int Nilai = userinput.nextInt();
       
                
            //main code
            if(Nilai<50){
                System.out.println(nim);
                System.out.println("Kamu memiliki nilai " + Nilai);
                System.out.println("Kamu Tidak Lulus ");   
            }   
            else if(Nilai>=50 && Nilai<60){  
                System.out.println(nim);
                System.out.println("Kamu memiliki nilai " + Nilai);
                System.out.println("grade D ");   
            }   
            else if(Nilai>=60 && Nilai<70){
                System.out.println(nim);
                System.out.println("Kamu memiliki nilai " + Nilai);
                System.out.println("grade C ");   
            }   
            else if(Nilai>=70 && Nilai<80){   
                System.out.println(nim);
                System.out.println("Kamu memiliki nilai " + Nilai);
                System.out.println("grade B ");   
            }   
            else if(Nilai>=80 && Nilai<90){
                        System.out.println(nim);
                        System.out.println("Kamu memiliki nilai " + Nilai);
                        System.out.println("grade A ");   
            }else if(Nilai>=90 && Nilai<100){
                System.out.println(nim);
                System.out.println("Kamu memiliki nilai " + Nilai);
                System.out.println("grade A+");   
            }else{   
                System.out.println("Data Nilai Salah !");
        }
    }
}
